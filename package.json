  "description": "Webhook calls of custom BOT that support DingTalk, Lark and WeCom",
  "main": "lib/main.js",
  "author": "northwang <69568203+wyb199877@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "yarn build && yarn format && yarn package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northwang-personal/chatbot-webhook-client.git"
